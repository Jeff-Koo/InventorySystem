<!-- mb-2 : margin bottom 2-->
{{#each items}}
    <div class="card card-body mb-2">
        <p><b>Item Number: </b> {{itemNumber}}</p>
        <p><b>Description: </b> {{description}}</p>
        <p><b>Last Updated Date: </b> {{lastUpdatedDate}}</p>
        <p><b>Quantity: </b> {{quantity}}</p>

        <!-- check mongodb the _id property name, different version of mongodb the id ame can be different -->
        <a href="/inventories/quantityIncrease/{{_id}}" class="btn btn-dark btn-block">Increase Inventory</a>
        <a href="/inventories/quantityDecrease/{{_id}}" class="btn btn-dark btn-block">Decrease Inventory</a>
        
        
        <!-- adding a form for delete button -->
        <form action="/inventories/{{_id}}?_method=DELETE" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            <input type="submit" class="btn btn-danger btn-block" value="Delete" />
        </form>
    </div>
{{else}}
    <h2>No Item Listed</h2>
{{/each}}