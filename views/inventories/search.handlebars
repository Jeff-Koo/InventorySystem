{{#if item}}
    <div class="card card-body mb-2">
        <p><b>Item Number: </b> {{item.itemNumber}}</p>
        <p><b>Description: </b> {{item.description}}</p>
        <p><b>Last Updated Date: </b> {{item.lastUpdatedDate}}</p>
        <p><b>Quantity: </b> {{item.quantity}}</p>

        <!-- check mongodb the _id property name, different version of mongodb the id ame can be different -->
        <a href="/inventories/quantityIncrease/{{item._id}}" class="btn btn-dark btn-block">Increase Inventory</a>
        <a href="/inventories/quantityDecrease/{{item._id}}" class="btn btn-dark btn-block">Decrease Inventory</a>
        
        
        <!-- adding a form for delete button -->
        <form action="/inventories/{{item._id}}?_method=DELETE" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            <input type="submit" class="btn btn-danger btn-block" value="Delete" />
        </form>
    </div>
{{else}}
    <h2>Search No Result</h2>
{{/if}}